<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/frame_outer">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_material_light"
            android:layout_weight="0.13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/text_packName"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:id="@+id/text1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/text_questName" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:id="@+id/imageView3"
                    android:layout_weight="0.12"
                    android:background="@color/accent_material_dark"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user"
                    android:id="@+id/text_userName"
                    android:layout_marginRight="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.87"
            android:weightSum="1"
            android:background="@color/accent_material_dark">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.02"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Question"
                android:id="@+id/text_question"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.13"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.425">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ans1"
                    android:id="@+id/text_answer1"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ans2"
                    android:id="@+id/text_answer2"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.425">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ans3"
                    android:id="@+id/text_answer3"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ans4"
                    android:id="@+id/text_answer4"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#ffffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="251dp"
        android:layout_height="387dp"
        android:layout_gravity="center"
        android:background="@color/accent_material_dark"
        android:id="@+id/frame_inner"
        android:alpha="0.90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Score"
            android:id="@+id/text2"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="300"
            android:id="@+id/text_score"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="60dp" />

        <Button
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:id="@+id/btn_retry"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="0dp" />

    </FrameLayout>
</FrameLayout>